@import url('https://fonts.googleapis.com/css2?family=Montserrat&display=swap');

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    background-color: #EFEAD7;
}

#logo {
    background-color: #dd9b3d;
    padding: 1em;
    width: 100%;
    display: block;
    margin-top: 15px;
    margin-left: 110px;
    position: fixed;
}

.container {
    display: flex;
}

.post_area {
    background-color: #D0C9BF;
    border-radius: 2em;
    width: 55%;
    height: 100%;
    margin: 7% 10% 5% 5% ;
    -webkit-box-shadow: 0 0 8px 4px gray;
	-moz-box-shadow: 0 0 8px 4px gray;
	box-shadow: 0 0 8px 4px gray;
}

section {
    background-color: #D0C9BF;
    border-radius: 2em;
    width: 20%;
    height: 405px;
    margin: 2% 5% 5% 5%;
    top: 105px;
    left: 0;
    right: 0;
    position: sticky;
    -webkit-box-shadow: 0 0 8px 4px gray;
	-moz-box-shadow: 0 0 8px 4px gray;
	box-shadow: 0 0 8px 4px gray;
}

#section_pp {
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 100px;
    margin-top: 10px;
}

#name_surname {
    font-family: 'Montserrat';
    font-weight: bolder;
    font-size: 18px;
    text-align: center;
    margin-top: 10px;
}

.lists {
    font-family: 'Montserrat', sans-serif;
    font-weight: 600px;
    font-size: 16px;
    text-align: center;
    list-style-type: none;
    flex-direction: column;
    grid-row-gap: 20px;
}

.lists li {
    height: 2em;
    margin: 0 auto;
    padding-top: 5px;
    padding-bottom: 5px;
}

.lists li a {
    padding-top: 15px;
    padding-bottom: 15px;
    font-size: large;
    font-weight: bold;
}

.lists li:hover {
    background-color: #6d8b74;
    width: 100%;
    height: 2em;
}

#sections_a {
    text-decoration: none;
    color: black;
}

#log-out{
    opacity: 0.4;
}

#log-out:hover{
    opacity: 1;
}

.logout {
    margin-top: 30px;
    color: rgb(255,0,0);
    justify-content: center;
}

#logout_link {
    display: flex;
    justify-content: center;
    color: rgb(255,0,0);
    text-decoration: none;
    margin-top: 15px;
}

#logout_img {
    width: 25px;
}

#logout_text {
    margin-left: 5px;
    font-family: Montserrat;
    font-size: 14px;
    display: flex;
    align-items: center;
    font-weight: 700;
}



.posts {
    display: flex;
    flex-direction: column;
    margin-left: auto;
    margin-right: auto;
    width: 80%;
}

#post1 {
    margin-top: 35px;
    margin-bottom: 35px;
    height: 500px;
    background-color: blueviolet;
    border-radius: 30px;
    display: flex;
    flex-direction: column;
    box-shadow: 5px 5px 5px 5px  #8a8a8a;
}

#post_top {
    background-color: #4F6D55;
    height: 14%;
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    display: inline-block;
}

#posts_pp {
    width: 55px;
    margin-left: 20px;
    margin-top: 8px;
    display: inline-block; 
}

.post_name_date {
    font-family: 'Montserrat';
    font-size: 14px;
    margin: -50px 0 0 85px;
    color: #D3CFC3;
    font-size: 10px;
}

#post_name_surname {   
    display: inline-block;
    margin-bottom: 2px;
    color: #D3CFC3;
    font-weight: bold;
    font-family: 'Montserrat';
    font-size: medium;
}

#post_middle {
    background-color: #D3CFC3;
    height: 72%;
}

#post_image {
    width: 100%;
    height: 50%;
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top: 38px;
}

#post_bottom {
    background-color: #4F6D55;
    height: 14%;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 30px;
}

