.discover {
    display: flex;
    justify-content: space-around;
    /* align-items: center; */
    margin-top: 20px;
    background-color: #4F6D55;
    width: 90%;
    margin-left: auto;
    margin-right: auto;
    border-radius: 20px;
    padding: 10px;
    max-height: 100px;
    box-shadow: 2px 2px 2px 2px  #8a8a8a;
}

#discover_img {
    max-height: 60px;
    align-self: center;
}

#discover_text {
    margin-left: -5px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 16px;
    align-self: center;
    color: black;
    /* overflow: hidden; align-self:center veya .discover içindeki align-items:center olunca bu çalışmıyor. */
}

#discover_button {
    background-color: #4f4f4f;
    min-height: 40px;
    width: 150px;
    max-height: 40px;
    font-family: 'Montserrat', sans-serif;
    font-weight: bolder;
    font-size: 16px;
    color:azure;
    border-radius: 20px;
    border: none;
    align-self: center;
}

#discover_button:hover {
    background-color: #dd9b3d;
    min-height: 40px;
    width: 150px;
    max-height: 40px;
    font-family: 'Montserrat', sans-serif;
    font-weight: bolder;
    font-size: 16px;
    color:azure;
    border-radius: 20px;
    border: none;
    align-self: center;
}

#new_post_button {
    background-color: #4F6D55;
    min-height: 40px;
    width: 150px;
    max-height: 40px;
    font-family: 'Montserrat', sans-serif;
    font-weight: bolder;
    font-size: 16px;
    color:azure;
    border-radius: 20px;
    border: none;
    align-self: center;
    margin-top: 20px;
}


#new_post_button:hover {
    background-color: #dd9b3d;
    min-height: 40px;
    width: 150px;
    max-height: 40px;
    font-family: 'Montserrat', sans-serif;
    font-weight: bolder;
    font-size: 16px;
    color:azure;
    border-radius: 20px;
    border: none;
    align-self: center;

}